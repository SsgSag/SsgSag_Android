<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CalendarDetailActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                <ImageView
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_centerInParent="true"
                        android:text="활동정보"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal"
                        android:textColor="#000000"
                        android:letterSpacing="-0.02"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
            <ImageView
                    android:background="#f7f7f7"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"/>
            <ImageView
                    android:id="@+id/activity_img_calendar_detail"
                    android:layout_width="match_parent"
                    android:layout_height="162dp"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="131dp">
                <TextView
                        android:id="@+id/text_calendar_detail_category"
                        android:layout_toEndOf="@id/calendar_detail_category_rectangle"
                        android:textColor="#fe6d6d"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="14dp"
                        android:text="동아리"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:letterSpacing="-0.02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:id="@+id/calendar_detail_category_rectangle"
                        android:src="@drawable/rectangle_copy_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/calendar_detail_title"
                        android:layout_toEndOf="@+id/calendar_detail_category_rectangle"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@+id/text_calendar_detail_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:textColor="#474747"
                        android:letterSpacing="-0.02"
                        android:text="IT 벤처\n창업 동아리 SOPT 모집"
                />
                <TextView
                        android:layout_below="@id/calendar_detail_title"
                        android:id="@+id/calendar_detail_hash"
                        android:layout_toEndOf="@id/calendar_detail_category_rectangle"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="normal"
                        android:textColor="#8f8f93"
                        android:text="#기획/아이디어 #디자인 #IT/기술 #창업/스타트업"/>
                <ImageView
                        android:id="@+id/btn_calendar_detail_share"
                        android:src="@drawable/ic_share"
                        android:layout_alignBottom="@+id/calendar_detail_title"
                        android:layout_toEndOf="@+id/calendar_detail_title"
                        android:layout_marginLeft="1.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>



            <RelativeLayout
                    android:layout_marginTop="19.2dp"
                    android:layout_width="match_parent"
                    android:layout_height="126dp">
                <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/main_sub_rectangle"/>
                <RelativeLayout
                        android:id="@+id/img_calendar_detail"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/process_paper"
                            android:src="@drawable/ic_card_process_paper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:id="@+id/process_line"
                            android:layout_toEndOf="@+id/process_paper"
                            android:src="@drawable/line_main_gradient_3"
                            android:scaleType="fitXY"
                            android:layout_width="219dp"
                            android:layout_height="2dp"
                            android:layout_centerVertical="true"/>
                    <ImageView
                            android:id="@+id/process_bell"
                            android:layout_marginLeft="47dp"
                            android:layout_toEndOf="@+id/process_paper"
                            android:src="@drawable/ic_card_process_bell"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:layout_toEndOf="@+id/process_bell"
                            android:layout_marginLeft="47dp"
                            android:src="@drawable/ic_card_process_interview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:id="@+id/process_final"
                            android:layout_toEndOf="@+id/process_line"
                            android:src="@drawable/ic_card_process_final"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_marginTop="6dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/text_calendar_detail"
                        android:layout_below="@+id/img_calendar_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <RelativeLayout
                            android:id="@+id/text_box_calendar_detail_step1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/text_calendar_detail_step1"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:textStyle="normal"
                                android:textColor="#666666"
                                android:letterSpacing="-0.02"
                                android:gravity="center_horizontal"
                                android:text="서류접수"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/text_calendar_detail_step1_date"
                                android:layout_below="@+id/text_calendar_detail_step1"
                                android:text="08.27\n~09.05"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:textStyle="normal"
                                android:textColor="#666666"
                                android:letterSpacing="-0.02"
                                android:gravity="center_horizontal"
                                android:textSize="12sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_marginLeft="47dp"
                            android:layout_toEndOf="@+id/text_box_calendar_detail_step1"
                            android:id="@+id/text_box_calendar_detail_step2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/text_calendar_detail_step2"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:textStyle="normal"
                                android:textColor="#666666"
                                android:letterSpacing="-0.02"
                                android:gravity="center_horizontal"
                                android:text="1차발표"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/text_calendar_detail_step2_date"
                                android:layout_below="@+id/text_calendar_detail_step2"
                                android:text="09.06"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:textStyle="normal"
                                android:textColor="#666666"
                                android:letterSpacing="-0.02"
                                android:gravity="center_horizontal"
                                android:textSize="12sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_marginLeft="47dp"
                            android:layout_toEndOf="@+id/text_box_calendar_detail_step2"
                            android:id="@+id/text_box_calendar_detail_step3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/text_calendar_detail_step3"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:textStyle="normal"
                                android:textColor="#666666"
                                android:letterSpacing="-0.02"
                                android:gravity="center_horizontal"
                                android:text="면접"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/text_calendar_detail_step3_date"
                                android:layout_below="@+id/text_calendar_detail_step3"
                                android:text="09.08\n~09.09"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:textStyle="normal"
                                android:textColor="#666666"
                                android:letterSpacing="-0.02"
                                android:gravity="center_horizontal"
                                android:textSize="12sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_marginLeft="47dp"
                            android:layout_toEndOf="@+id/text_box_calendar_detail_step3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/text_calendar_detail_step4"
                                android:text="최종발표"
                                android:textColor="#666666"
                                android:textSize="12sp"
                                android:letterSpacing="-0.02"
                                android:gravity="center_horizontal"
                                android:textStyle="normal"
                                android:fontFamily="sans-serif-medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/text_calendar_detail_step4_date"
                                android:layout_below="@+id/text_calendar_detail_step4"
                                android:fontFamily="sans-serif-light"
                                android:textStyle="normal"
                                android:textColor="#666666"
                                android:letterSpacing="-0.02"
                                android:gravity="center_horizontal"
                                android:textSize="12sp"
                                android:text="09.11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
            <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/title_calendar_detail_summary"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_horizontal"
                    android:text="개요"
                    android:letterSpacing="-0.02"
                    android:textColor="#425ee5"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/text_calendar_detail_summary"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="7sp"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:text="대학생 연합 IT 벤처 창업 동아리 SOPT의 23번째 열정을\n 모집합니다. 두 줄을 꽉 채우면 어떻게 될까요? 궁금하죠"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="25dp"
                    android:id="@+id/title_calendar_detail_target"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_horizontal"
                    android:text="모집대상"
                    android:letterSpacing="-0.02"
                    android:textColor="#425ee5"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/text_calendar_detail_target"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="IT 및 창업에 관심이 많은 수도권 내 대학생"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="7sp"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="25dp"
                    android:id="@+id/title_calendar_detail_term"
                    android:layout_marginLeft="15dp"
                    android:text="혜택"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.02"
                    android:textColor="#425ee5"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/text_calendar_detail_term"
                    android:text="은혜를 만날 수 있는 절호의 찬-스"
                    android:layout_marginLeft="15dp"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="7sp"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/title_calendar_detail_benefit"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.02"
                    android:textColor="#425ee5"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:text="지원방법"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/text_calendar_detail_benefit"
                    android:layout_marginTop="4dp"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="7sp"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="www.sopt.org의 Recruit 게시판"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <RelativeLayout
                    android:clickable="true"
                    android:layout_marginTop="16.5dp"
                    android:id="@+id/btn_calendar_detail_website"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <TextView
                        android:id="@+id/btn_calendar_detail_goto_website"
                        android:clickable="false"
                        android:text="웹사이트로 이동"
                        android:layout_centerInParent="true"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="normal"
                        android:textColor="#000000"
                        android:letterSpacing="-0.02"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>