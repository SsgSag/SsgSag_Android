<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frag_calendar_detail_recycle_view"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"/>

    <LinearLayout
            android:background="@drawable/to_do_list_bg_rectangle"
            android:id="@+id/ll_todo_all_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
        <RelativeLayout
                android:id="@+id/ll_todo_top_bar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_marginTop="9.6dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/iv_big_calendar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/todolist_button"/>
            <TextView
                    android:layout_marginTop="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/iv_big_calendar2"
                    android:id="@+id/tv_todo_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="18sp"
                    android:layout_marginBottom="10.6dp"
                    android:text="투두리스트"/>

        </RelativeLayout>
        <ImageView
                android:background="#40000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        <com.baoyz.swipemenulistview.SwipeMenuListView
                android:id="@+id/listView2"
                android:layout_width="match_parent"
                android:divider="@null"
                android:layout_height="0dp"
                android:layout_weight="42">

        </com.baoyz.swipemenulistview.SwipeMenuListView>

    </LinearLayout>

</LinearLayout>